#include <iostream>
#include <math.h>

using namespace std;

int main()
{
	int a, b;
	cin >> a >> b;
	cout << a + b << endl << a - b << endl << a * b << endl << (a + b) / 2.0 << endl;

	if ((a < 0) || (b < 0)) {
		a = abs(a);
		b = abs(b);
	}
	if (a > b) {
		cout << a - b;
    }
	if (b > a) {
		cout << b - a;
	}
	
return 0;
}
